(define (make-bus bit-width)
  (cond ((= bit-width 0) '())
        ((= bit-width 1) (list (make-wire)))
        ((> bit-width 1) (cons (make-wire) (make-bus (- bit-width 1))))
        (else (error "Invalid bit-width -- MAKE-BUS" bit-width))))
(define (get-wire bus k)
  (list-ref bus k))
(define (bus-to-list bus)
  (if (> (length bus) 0)
      (cons (get-signal (car bus))
            (bus-to-list (cdr bus)))
      '()))
