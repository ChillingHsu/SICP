(define (ripple-carry-adder list-A list-B list-S C)
  (if (= (length list-A)
         (length list-B)
         (length list-S))
      (if (= (length list-A) 1)
          (let ((Cn (make-wire))
                (An (car list-A))
                (Bn (car list-B))
                (Sn (car list-S)))
            (full-adder An Bn Cn Sn C))
          (let ((Ak (car list-A))
                (Bk (car list-B))
                (Sk (car list-S))
                (remain-A (cdr list-A))
                (remain-B (cdr list-B))
                (remain-S (cdr list-S))
                (Cin (make-wire)))
            (ripple-carry-adder remain-A remain-B remain-S Cin)
            (full-adder Ak Bk Cin Sk C)))
      (error "Invalid number of signals -- RIPPLE-CARRY-ADDER")))
